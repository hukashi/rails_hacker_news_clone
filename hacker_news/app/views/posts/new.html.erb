<h2>Create your post here!</h2>

<div class='form'>
  <%= form_for @post do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body, :rows => 20, :cols =>70 %>
    </div>
    <div>
      <%= f.submit "Post" %>
    </div>
  <% end %>
</div>
