<h2><%= @post.title %></h2>

<div><%= @post.body %></div>

<div>Author: <%= @user.username %></div>

<div><%= my_date(@post.created_at) %></div>

<% if session[:user_id] == @post.user_id %>
  <br>
  <%= button_to 'Edit this post', edit_post_path(@post), method: :get %>
  <br>
  <%= button_to 'Delete this post', post_path(@post), method: :delete %>
  <br>
<% end %>

